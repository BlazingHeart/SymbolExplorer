<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:SymbolExplorer="clr-namespace:SymbolExplorer;assembly=SymbolExplorer"
        xmlns:ViewModels="clr-namespace:SymbolExplorer.ViewModels;assembly=SymbolExplorer"
        xmlns:SymbolExplorerLib="clr-namespace:SymbolExplorerLib;assembly=SymbolExplorerLib"
        x:Class="SymbolExplorer.MainWindow"
        Title="Symbol Exporer" Height="350" Width="525" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"
       >
    <Window.Resources>
        <Style x:Key="VerticalSeparatorStyle" TargetType="{x:Type Separator}">
            <Setter Property="Background" Value="#FFB6BDC5"/>
            <Setter Property="MinWidth" Value="1"/>
            <Setter Property="MinHeight" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Separator}">
                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="True"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <HierarchicalDataTemplate x:Key="ArchiveMemberViewTemplate" DataType="ViewModels:ArchiveMemberViewModel">
            <TextBlock Text="{Binding Name}" />
        </HierarchicalDataTemplate>

        <DataTemplate x:Key="ArchiveMemberHeaderDataTemplate" DataType="ArchiveMemberHeaderViewModel">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="40" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" MinWidth="40" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Name:" />
                    <TextBlock Text="Date:" />
                    <TextBlock Text="Size:" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="4,0,0,0">
                    <TextBlock Text="{Binding ArchiveMember.Header.Name}" />
                    <TextBlock Text="{Binding ArchiveMember.Header.Date, StringFormat='yyyy-MM-dd'}" />
                    <TextBlock Text="{Binding ArchiveMember.Header.Size}" />
                </StackPanel>

                <Separator Grid.Column="2" Width="1" Style="{DynamicResource VerticalSeparatorStyle}" />

                <StackPanel Grid.Column="3">
                    <TextBlock Text="User:" />
                    <TextBlock Text="Group:" />
                    <TextBlock Text="Mode:" />
                </StackPanel>

                <StackPanel Grid.Column="4" Margin="4,0,0,0">
                    <TextBlock Text="{Binding ArchiveMember.Header.UserID}" />
                    <TextBlock Text="{Binding ArchiveMember.Header.GroupID}" />
                    <TextBlock Text="{Binding ArchiveMember.Header.Mode, StringFormat=' {0} (0x{0:X})'}" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="SymbolDataTemplate" DataType="SymbolViewModel">
            <Expander Header="Symbol Details" ExpandDirection="Up" IsExpanded="False" VerticalAlignment="Stretch">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Name:" />
                        <TextBlock Text="Demangled:" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="4,0,0,0">
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding Demangled}" />
                    </StackPanel>

                    <Separator Grid.Column="2" Width="1" Style="{DynamicResource VerticalSeparatorStyle}" />
                </Grid>
            </Expander>
        </DataTemplate>


        <DataTemplate x:Key="ObjectFileDataTemplate" DataType="ObjectFileMemberViewModel">
            <ListBox ItemsSource="{Binding Symbols}" ItemTemplate="{StaticResource SymbolDataTemplate}"/>
        </DataTemplate>

        <ControlTemplate x:Key="ArchiveMemberHeaderControlTemplate">
            <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource ArchiveMemberHeaderDataTemplate}" />
        </ControlTemplate>

        <ControlTemplate x:Key="ObjectFileControlTemplate">
            <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource ObjectFileDataTemplate}" />
        </ControlTemplate>
        
        <ControlTemplate x:Key="SymbolControlTemplate">
            <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource SymbolDataTemplate}" />
        </ControlTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="370*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="Menu" VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="99" Height="18">
            <MenuItem x:Name="MenuItemFile" Header="File">
                <MenuItem  x:Name="MenuItemOpen" Header="Open..." Click="MenuItemOpen_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuItemAbout" Header="About" Click="MenuItemAbout_Click"/>
        </Menu>
        
        <TreeView x:Name="MemberTree" Grid.Row="1" SelectedItemChanged="MemberTree_SelectedItemChanged" ItemTemplate="{StaticResource ArchiveMemberViewTemplate}" />
        
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" Width="10"/>

        <DockPanel Grid.Row="1" Grid.Column="2" DataContext="{Binding ElementName=MemberTree, Path=SelectedItem}" VerticalAlignment="Stretch">
            <ContentControl Margin="4" DockPanel.Dock="Top" Template="{StaticResource ArchiveMemberHeaderControlTemplate}" />
            <ContentControl Margin="4" DockPanel.Dock="Bottom"  DataContext="{Binding ElementName=symbolDataGrid, Path=SelectedItem}" Template="{StaticResource SymbolControlTemplate}" />
            
            <DataGrid x:Name="symbolDataGrid" IsReadOnly="True" SelectionMode="Single" ItemsSource="{Binding Symbols}" AutoGeneratingColumn="symbolDataGrid_AutoGeneratingColumn" AutoGeneratedColumns="symbolDataGrid_AutoGeneratedColumns">
                <DataGrid.Resources>
                    <MenuItem Header="Show/Hide Columns" x:Key="columnsMenuItem">
                    </MenuItem>
                    <ContextMenu x:Key="headerContextMenu">
                    </ContextMenu>
                    <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="ContextMenu" Value="{DynamicResource headerContextMenu}" />
                    </Style>
                </DataGrid.Resources>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
