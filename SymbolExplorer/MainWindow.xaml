<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:SymbolExplorer="clr-namespace:SymbolExplorer;assembly=SymbolExplorer"
        xmlns:ViewModels="clr-namespace:SymbolExplorer.ViewModels;assembly=SymbolExplorer"
        xmlns:SymbolExplorer.Code="clr-namespace:SymbolExplorer.Code;assembly=SymbolExplorer"
        x:Class="SymbolExplorer.MainWindow"
        Title="Symbol Explorer" Height="514" Width="752" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"
       >
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <DockPanel>
        <Menu x:Name="menu" DockPanel.Dock="Top" Height="18">
            <MenuItem x:Name="MenuItemFile" Header="File">
                <MenuItem  x:Name="MenuItemOpen" Header="Open..." Click="MenuItemOpen_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuItemAbout" Header="About" Click="MenuItemAbout_Click"/>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar Band="1" BandIndex="1" x:Name="toolbar" >
                <ToolBarPanel>
                    <ToggleButton IsChecked="{Binding HideLinkerMembers}" Checked="toggleLinkerSymbols_ToggleChecked" Unchecked="toggleLinkerSymbols_ToggleChecked">
                        <Image Source="Images/toggle_linker_symbols_32.png" />
                    </ToggleButton>
                </ToolBarPanel>
            </ToolBar>
        </ToolBarTray>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="147*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="370*"/>
            </Grid.ColumnDefinitions>

            <TreeView x:Name="MemberTree" ItemTemplate="{StaticResource ArchiveMemberViewTemplate}" />

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="8" Cursor="SizeWE"/>

            <TabControl Grid.Column="2" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" >
                <TabItem Header="Object File">
                    <DockPanel DataContext="{Binding ElementName=MemberTree, Path=SelectedItem}">
                        <ContentControl Margin="4" Template="{StaticResource ObjectFileControlTemplate}" />
                    </DockPanel>
                </TabItem>
                <TabItem Header="Symbols">
                    <DockPanel DataContext="{Binding ElementName=MemberTree, Path=SelectedItem}">
                        <ContentControl Margin="4" DockPanel.Dock="Bottom"  DataContext="{Binding ElementName=symbolDataGrid, Path=SelectedItem}" Template="{StaticResource SymbolControlTemplate}" />

                        <DataGrid x:Name="symbolDataGrid" IsReadOnly="True" SelectionMode="Single" ItemsSource="{Binding GroupedSymbols}" AutoGeneratingColumn="symbolDataGrid_AutoGeneratingColumn" AutoGeneratedColumns="symbolDataGrid_AutoGeneratedColumns">
                            <DataGrid.Resources>
                                <MenuItem Header="Show/Hide Columns" x:Key="columnsMenuItem">
                                </MenuItem>
                                <ContextMenu x:Key="headerContextMenu">
                                </ContextMenu>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="ContextMenu" Value="{DynamicResource headerContextMenu}" />
                                </Style>
                            </DataGrid.Resources>
                        </DataGrid>
                    </DockPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
