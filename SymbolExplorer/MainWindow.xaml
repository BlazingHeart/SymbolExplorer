<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:SymbolExplorerLib="clr-namespace:SymbolExplorerLib;assembly=SymbolExplorerLib" x:Class="SymbolExplorer.MainWindow"
        Title="Symbol Exporer" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <SymbolExplorerLib:ArchiveFile />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="370*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="Menu" VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="2" Height="18">
            <MenuItem x:Name="MenuItemFile" Header="File">
                <MenuItem  x:Name="MenuItemOpen" Header="Open..." Click="MenuItemOpen_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuItemAbout" Header="About"/>
        </Menu>
        <TreeView x:Name="MemberTree" Grid.Row="1" SelectedItemChanged="MemberTree_SelectedItemChanged"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" Width="10"/>
    </Grid>
</Window>
